<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"        android:layout_margin="16dp"

    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/links"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.retrofitdownloadzip.MainActivity" />

    <Button
        android:id="@+id/loadAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="load all" />

    <Button
        android:id="@+id/cancelAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="cancelAll" />


</RelativeLayout>

